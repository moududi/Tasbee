<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/img5"
    android:orientation="vertical"

    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="220dp"
android:gravity="center"
    >

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="পড়ুন"
        android:background="@drawable/two_color"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/limahafuz"
        android:textSize="30dp"



        />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سبحان الله\nসুবাহানআল্লাহ"
        android:gravity="center"
        android:textColor="#FDFDFD"
        android:textSize="25sp"
        android:layout_marginLeft="120dp"
        android:fontFamily="@font/li2"


        />


</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/two_color"
            android:fontFamily="@font/limahafuz"
            android:layout_marginLeft="55dp"
            android:text="পড়ুন"
            android:textSize="30dp"

            />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:fontFamily="@font/li2"
            android:text="الحمد لله\nআলহামদুলিল্লাহ"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center"

        >

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/two_color"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/limahafuz"
            android:text="পড়ুন"
            android:textSize="30sp"

            />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:fontFamily="@font/li2"
            android:gravity="center"
            android:text="الحمد لله\nআল্লাহুকবার"
            android:textColor="#FFFFFF"
            android:textSize="25sp"

            />


    </LinearLayout>

</LinearLayout>